<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Upload File</title>
  <style>
    .error {
      color: red;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
<a href="/">Home</a>

  <h1>Upload File</h1>

  <% if (typeof errors !== 'undefined') { %>
    <div class="error">
      <% errors.forEach(error => { %>
        <p><%= error.msg %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/upload-file" method="POST" enctype="multipart/form-data">
    <label for="path">Save files to path:</label>
    <input id="path" name="path" type="text" placeholder="new = uploads/new/" />
    
    <input id="files" name="files" type="file" multiple/> 
    
    <button type="submit">Upload</button>
  </form>
</body>
</html>

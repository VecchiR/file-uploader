<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Storage</title>
    <style>
        .error {
            color: red;
            margin-bottom: 10px;
        }
        
        .storage-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        ul {
            list-style: none;
            padding-left: 20px;
        }
        
        .folder, .file {
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        .folder {
            background-color: #f5f5f5;
        }
        
        .file {
            background-color: white;
        }
        
        .folder-info, .file-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .folder-name, .file-name {
            font-weight: bold;
        }
        
        .folder-date, .file-date {
            color: #666;
            font-size: 0.9em;
        }
        
        .upload-form {
            margin: 20px 0;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="storage-container">
        <a href="/">Home</a>
        <h1>Storage</h1>

        <% if (typeof errors !== 'undefined') { %>
            <div class="error">
                <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>

        <form class="upload-form" action="/storage" method="POST" enctype="multipart/form-data">
            <div>
                <label for="path">Upload to folder (optional):</label>
                <input type="text" id="path" name="path" placeholder="e.g., folder1/subfolder">
            </div>
            <div>
                <label for="files">Select files:</label>
                <input type="file" id="files" name="files" multiple>
            </div>
            <button type="submit">Upload</button>
        </form>

        <div class="storage-content">
            <%- include('partials/listFoldersAndFiles', { files }); %>
        </div>
    </div>
</body>
</html>
